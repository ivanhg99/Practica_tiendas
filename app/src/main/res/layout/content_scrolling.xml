                    app:layout_constraintBottom_toBottomOf="@id/imgCard4" />

                <TextView
                    android:id="@+id/textonum"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/altolay"
                    android:text="@string/num4"
                    android:textSize="@dimen/anchotextocont"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="@id/imgCard4"
                    app:layout_constraintBottom_toBottomOf="@id/imgCard4" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>